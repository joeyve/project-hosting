if [ $(id -u) -eq 0 ]; then
	read -p "Geef de username : " username
	read -s -p "Geef het paswoord : " paswoord
	egrep "^$username" /etc/passwd >/dev/null
	if [ $? -eq 0 ]; then
		echo "$username bestaat al!"
		exit 1
	else
		pass=$(perl -e 'print crypt($ARGV[0], "password")' $paswoord)
		useradd -m -p $pass $username
		[ $? -eq 0 ] && echo "User $username is toegevoegd!" || echo "User $username toevoegen mislukt"
		mkdir /home/kobe/project-hosting/www/$username $username
		usermod --home /home/kobe/project-hosting/www/$username $username
		fi
else
	echo "Alleen root mag users in het systeem toevoegen"
	exit 2
fi
